<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CalculatriceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="156dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/btn_zero"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonUn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"
                android:text="@string/btn_un"
                android:textSize="28sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/buttonDeux"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"
                android:text="@string/btn_deux"
                android:textSize="28sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/buttonTrois"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"
                android:text="@string/btn_trois"
                android:textSize="28sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#068EA5"
                android:text="@string/btn_plus"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonQuatre"
                android:text="@string/btn_quatre"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonCinq"
                android:text="@string/btn_cinq"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonSix"
                android:text="@string/btn_six"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonMoins"
                android:text="@string/btn_moins"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#068EA5"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSept"
                android:text="@string/btn_sept"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonHuit"
                android:text="@string/btn_huit"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonNeuf"
                android:text="@string/btn_neuf"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonMultiplier"
                android:text="@string/btn_multiplier"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#068EA5"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonPoint"
                android:text="@string/btn_point"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonZero"
                android:text="@string/btn_zero"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonClear"
                android:text="@string/btn_clear"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#41B692"
                android:layout_weight="1"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
            <Button
                android:id="@+id/buttonDiviser"
                android:text="@string/btn_diviser"
                android:textSize="28sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#068EA5"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1C0AD"
            android:textSize="28sp"
            android:text="@string/btn_egal" />

        <TextView
            android:id="@+id/textViewLastOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>